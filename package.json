{
  "name": "fcc-url-shortener-ms",
  "version": "0.0.1",
  "main": "src/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ferzerkerx/fcc-url-shortener-ms"
  },
  "homepage": "https://github.com/ferzerkerx/fcc-url-shortener-ms",
  "bugs": "https://github.com/ferzerkerx/fcc-url-shortener-ms/issues",
  "keywords": [
    "Express",
    "Node",
    "javascript",
    "FreeCodeCamp",
    "MongoDB",
    "Mongoose"
  ],
  "scripts": {
    "start": "node src/server.js",
    "test": "NODE_ENV=development jest",
    "format": "yarn prettier \"{src,config}/**/*.{js,ts,tsx,json}\" --write",
    "lint": "eslint 'src/**/*.{js,ts}'"
  },
  "author": "Fernando Montes",
  "license": "MIT",
  "dependencies": {
    "express": "^4.12.4",
    "dotenv": "^8.0.0",
    "mongoose": "^5.0.17"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "prettier": "^1.19.1"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.(test|integration|spec).(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "./{src,config}/**/*.{js,ts,tsx,json}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": "12.x"
  }
}
